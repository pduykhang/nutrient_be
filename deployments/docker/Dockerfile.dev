# Development Dockerfile
FROM golang:1.24-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git make wget

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o nutrient-api cmd/api/main.go

EXPOSE 8080

# Health check
HEALTHCHECK --interval=10s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health/liveness || exit 1

CMD ["./nutrient-api", "server", "--config=configs/config.dev.yaml"]
