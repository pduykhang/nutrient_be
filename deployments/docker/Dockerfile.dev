# Development Dockerfile with Air for hot reload
FROM golang:1.24-alpine

WORKDIR /app

# Install dependencies for Air and build tools
RUN apk add --no-cache git make wget curl

# Install Air for hot reload
# Pin Air to v1.62.0 which is compatible with Go <=1.24
RUN go install github.com/air-verse/air@v1.62.0

# Copy go mod files first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy Air config
COPY .air.toml ./

# Copy source code (will be overridden by volume mount, but needed for initial build)
COPY . .

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=10s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health/liveness || exit 1

# Use Air for hot reload instead of direct binary execution
CMD ["air", "-c", ".air.toml"]
